# ============================================================================
# Athena Environment Configuration
# Copy this file to .env and update with your values
# ============================================================================

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_PASSWORD=athena_secure_password_change_me
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=athena
POSTGRES_USER=athena

# ============================================================================
# GitHub API Configuration
# ============================================================================
# Get your token from: https://github.com/settings/tokens
# Required scopes: repo (for private repos), public_repo (for public repos)
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_API_BASE_URL=https://api.github.com

# ============================================================================
# Kafka Configuration
# ============================================================================
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_CLIENT_ID=athena-producer
KAFKA_CONSUMER_GROUP=athena-consumers
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_COMPRESSION_TYPE=gzip

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_TTL=3600

# ============================================================================
# Weaviate Configuration
# ============================================================================
WEAVIATE_URL=http://weaviate:8080
WEAVIATE_TIMEOUT=30

# ============================================================================
# MLflow Configuration
# ============================================================================
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=athena-experiments

# ============================================================================
# Monitoring Configuration
# ============================================================================
GRAFANA_PASSWORD=admin_change_me
PROMETHEUS_RETENTION_TIME=15d

# ============================================================================
# Application Configuration
# ============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Crawler Settings
CRAWLER_BATCH_SIZE=100
CRAWLER_MAX_CONCURRENT_REQUESTS=50
CRAWLER_RATE_LIMIT_PER_HOUR=5000
CRAWLER_BACKOFF_FACTOR=2
CRAWLER_MAX_RETRIES=3

# Consumer Settings
CONSUMER_BATCH_SIZE=500
CONSUMER_MAX_POLL_RECORDS=1000
CONSUMER_SESSION_TIMEOUT_MS=30000

# Feature Engineering
FEATURE_WINDOW_DAYS=90
FEATURE_MIN_COMMITS=10

# Model Training
MODEL_RANDOM_SEED=42
MODEL_TRAIN_TEST_SPLIT=0.8
MODEL_VALIDATION_SPLIT=0.2

# ============================================================================
# Development Settings (Optional)
# ============================================================================
# Set to 'true' to enable development features
DEV_MODE=false
DEV_RELOAD=false
DEV_PROFILING=false

# ============================================================================
# Security Settings
# ============================================================================
# JWT Secret for API authentication (if implementing API later)
JWT_SECRET=your_jwt_secret_key_here_change_me
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
